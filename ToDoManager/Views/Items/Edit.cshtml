@{
    ViewData["Title"] = "Edit Task";
}
@model ToDoManager.Models.Item

<h2>Edit</h2>
<form asp-action="Edit">
    <div class="form-horizontal">
        <hr />
        <input type="hidden" asp-for="ItemId"/>
        <div class="form-group">
            <label for="ItemName" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="ItemName" class="form-control" />
                <span asp-validation-for="ItemName" class="text-danger"></span>
            </div>
            <label for="ItemDescription" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="ItemDescription" class="form-control" />
                <span asp-validation-for="ItemDescription" class="text-danger"></span>
            </div>
            <div class="col-md-10">
                <input type="submit" class="btn btn-primary mt-3" />
            </div>
        </div>
    </div>
</form>
